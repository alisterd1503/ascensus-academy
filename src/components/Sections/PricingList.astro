---
const { id } = Astro.props;

const qualifications = [
  {
    level: "A-level",
    price: "£36",
    bullet_points: [
      "Expert tutor with extensive experience in A-level curriculum.",
      "Tailors lessons to individual learning styles for maximum understanding.",
      "Provides exam strategies and practice to boost confidence and performance.",
    ],
  },
  {
    level: "GCSE",
    price: "£24",
    bullet_points: [
      "Experienced tutor with a passion for helping students succeed.",
      "Specialises in making complex topics understandable and engaging.",
      "Focuses on building confidence and study skills alongside subject knowledge.",
    ],
  },
];
---

<section id={id} class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-4">Pricing</h2>
    <p class="text-center text-gray-600 mb-12">
      Choose the right qualification level for your needs
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {qualifications.map((qualification) => {
        return (
          <div class="bg-gray-50 border border-gray-200 rounded-xl shadow-sm p-6">
            <div class="flex justify-between items-center mb-4">
              <h3 class="text-xl font-semibold text-gray-900">{qualification.level}</h3>
              <span class="text-lg font-bold text-primary-700">{qualification.price}</span>
            </div>

            <ul class="space-y-3">
              {qualification.bullet_points.map((point) => (
                <li class="flex items-start text-gray-700">
                  <!-- Thin tick icon -->
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="w-4 h-4 text-primary-600 mt-1 mr-2 flex-shrink-0"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="2"
                    stroke="currentColor"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                  </svg>
                  <span>{point}</span>
                </li>
              ))}
            </ul>
          </div>
        );
      })}
    </div>
  </div>
</section>
