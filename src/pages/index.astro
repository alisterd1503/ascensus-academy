---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroSection from "../components/Sections/HeroSection.astro";
import USPList from "../components/Sections/USPList.astro";
import Button from "../components/UI/Button.astro";
import SubjectList from "../components/Sections/SubjectList.astro";
import PricingList from "../components/Sections/PricingList.astro";
import TutorList from "../components/Sections/TutorList.astro";
---

<BaseLayout>
  <HeroSection 
    title="Welcome to Ascensus Academy"
    subtitle="For Students, By Students"
    backgroundImage="/uploads/hero-bg.webp"
    ctaText="View Our Services"
    ctaLink="/im-new"
    secondaryCtaText="Meet the Team"
    secondaryCtaLink="/sermons"
  />
  
  <!-- About Section -->
  <section class="py-16 bg-gray-50">
    <div class="container">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div>
          <img 
            src="/uploads/church-default.webp" 
            alt="Our Church" 
            class="rounded-lg shadow-lg object-cover w-full h-full"
          />
        </div>
        
        <div>
          <h2 class="text-3xl md:text-4xl font-bold mb-6">Our Story</h2>
          <p class="text-gray-700 mb-6 text-lg">
            Ascensus Academy was founded to revolutionise the future of tutoring. We believe the traditional education system needs an upgrade. That is why we only hire undergraduate tutors who have personally achieved an A* at A-level in the subject they teach.
          </p>
          <p class="text-gray-700 mb-8 text-lg">
            At Ascensus Academy every student is paired with a personalised mentor, a high achieving university student studying a similar course pathway. Our model is simple: If you want your child to succeed, connect them with someone who already has.
          </p>
          
          <Button href="/about-us">
            Learn More About Us
          </Button>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Sermons Section -->
  <USPList id="services"/>
  
  <!-- Ministries Preview -->
  <SubjectList id="subjects"/>

  <PricingList id="pricing"/>

  <TutorList id="tutors"/>
  
  <!-- Call to Action -->
  <section 
    class="py-20 bg-cover bg-center text-white"
    style="background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url(/uploads/thank-you-bg.webp)"
  >
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6 text-white">Ready to Apply?</h2>
        <p class="text-xl mb-8">
          Add some subtitle here
        </p>
        
        <div class="flex flex-wrap justify-center gap-4">
          <Button href="/im-new" variant="primary" size="lg">
            Apply Now
          </Button>
          
          <Button href="/contact" variant="outline" size="lg" class="bg-white/10 text-white border-white hover:bg-white hover:text-gray-900 backdrop-blur-sm">
            Contact Us
          </Button>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>