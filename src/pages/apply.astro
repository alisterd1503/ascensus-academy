---
import BaseLayout from "../layouts/BaseLayout.astro";
import PageHeader from "../components/Sections/PageHeader.astro";
---

<BaseLayout
  title="Contact Us - Ascensus Academy"
  description="Get in touch with our church. Find our contact information, location, and service times."
>
  <PageHeader 
    title="Apply Now" 
    subtitle="We will get back to you within 3-5 business days"
    backgroundImage="/uploads/contact-header-bg.webp"
  />
  
  <!-- Contact Information -->
  <section class="py-16">
    <div class="container">
      <script is:inline src="https://app.tutorbird.com/Widget/v4/Widget.ashx?settings=eyJTY2hvb2xJRCI6InNjaF9wNDNKViIsIldlYnNpdGVJRCI6Indic181eWxKWSIsIldlYnNpdGVCbG9ja0lEIjoid2JiX0hLWWpKaiJ9"></script>
    </div>
  </section>

  <!-- Staff Contact -->
  <section id="prayer" class="py-16">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Contact Details</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Need to reach a specific Tutor or staff member? Here's who to contact
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-5xl mx-auto">
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <h3 class="text-xl font-bold mb-2">General Queries</h3>
          <p class="text-gray-700 mb-4">
            For all your general questions about our tutoring services, scheduling, or policies, please reach out to us at
          </p>
          <div class="flex items-center text-gray-700">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <a href="mailto:contact@ascensusacademy.com" class="text-primary-600 hover:text-primary-700">
              contact@ascensusacademy.com
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>